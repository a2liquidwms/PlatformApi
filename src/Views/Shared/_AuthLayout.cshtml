@{
    var branding = ViewBag.Branding as BrandingContext;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @(branding?.SiteName ?? "Platform")</title>
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    
    @if (!string.IsNullOrEmpty(branding?.PrimaryColor))
    {
        <style>
            :root {
                --brand-primary: @branding.PrimaryColor;
            }
        </style>
    }
</head>
<body>
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                @if (!string.IsNullOrEmpty(branding?.LogoPath))
                {
                    <img src="@branding.LogoPath" alt="@branding.SiteName" class="auth-logo" />
                }
                <h1 class="auth-title">@(branding?.SiteName ?? "Platform")</h1>
            </div>
            
            <div class="auth-content">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-error" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                {
                    <div class="alert alert-success" role="alert">
                        @ViewBag.SuccessMessage
                    </div>
                }
                
                @RenderBody()
            </div>
        </div>
        
        <div class="auth-footer">
            <p>&copy; @DateTime.UtcNow.Year @(branding?.SiteName ?? "Platform"). All rights reserved.</p>
        </div>
    </div>
</body>
</html>