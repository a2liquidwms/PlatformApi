@{
    ViewData["Title"] = "Tenant Error";
    Layout = "_AuthLayout";
    var errorMessage = ViewBag.ErrorMessage as string ?? "An error occurred while processing your request.";
}

<div class="error-container text-center">
    <div class="error-icon mb-4">
        <i class="fas fa-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
    </div>
    
    <div class="mt-4">
        <a href="/auth/login" class="btn btn-primary me-2">
            <i class="fas fa-sign-in-alt me-1"></i>
            Go to Login
        </a>
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>
            Go Back
        </a>
    </div>
</div>

<style>
    .error-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2rem;
    }
    
    .error-icon {
        opacity: 0.8;
    }
    
    .error-actions ul {
        text-align: left;
        display: inline-block;
    }
    
    .error-actions li {
        color: #6c757d;
    }
</style>