@model ForgotPasswordInputModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_AuthLayout";
}

<h2 class="page-title">Forgot Password</h2>

<p class="form-description">
    Enter your email address below and we'll send you instructions to reset your password.
</p>

<form method="post" asp-action="ForgotPassword">
    <div class="form-group">
        <label asp-for="Email">Email Address</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email address" autocomplete="email" />
        <span asp-validation-for="Email" class="field-validation-error"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send Reset Instructions</button>
</form>

<div class="auth-links">
    <a asp-action="Login" class="auth-link">‚Üê Back to Sign In</a>
    <span>|</span>
    <a asp-action="Register" class="auth-link">Register an account</a>
</div>

<style>
    .form-description {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-bottom: var(--spacing-md);
        text-align: center;
        line-height: 1.5;
    }
</style>