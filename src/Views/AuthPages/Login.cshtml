@model LoginInputModel
@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<h2 class="page-title">Login</h2>
<p class="page-subtitle">Enter your credentials to access your account</p>

<form method="post" asp-controller="AuthPages" asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Enter Email" autocomplete="email" />
        <span asp-validation-for="Email" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••••" autocomplete="current-password" />
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </div>

    <div class="form-group">
        <label class="checkbox-container">
            <input asp-for="RememberMe" type="checkbox" />
            <span class="checkmark"></span>
            Remember me
        </label>
    </div>

    <input type="hidden" asp-for="TenantId" />
    <input type="hidden" asp-for="SiteId" />
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<div class="auth-links">
    <a asp-action="ForgotPassword" asp-route-returnUrl="@ViewBag.ReturnUrl" class="auth-link">Forgot password?</a>
</div>

<div class="auth-links">
    <span>Don't have an account? </span><a asp-action="Register" asp-route-returnUrl="@ViewBag.ReturnUrl" class="auth-link">Register</a>
</div>

<style>
    /* Custom checkbox styling */
    .checkbox-container {
        display: flex;
        align-items: center;
        cursor: pointer;
        font-size: 0.875rem;
        margin-bottom: var(--spacing-sm);
    }

    .checkbox-container input[type="checkbox"] {
        margin-right: var(--spacing-xs);
        transform: scale(1.1);
    }

    .checkbox-container input[type="checkbox"]:focus {
        outline: 2px solid var(--brand-primary);
        outline-offset: 2px;
    }
</style>